<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:padding="24dp">

        <!-- ðŸ”µ Header Section -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/welcome_text"
            android:textStyle="bold"
            android:background="#60afefff"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtLoginOrGen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_text"
            android:textColor="#FFFFFF"
            android:background="#964300ff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen_pass"
            android:layout_marginTop="32dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPassphrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/enter_pass"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textSize="18sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_btn"
            android:layout_marginTop="32dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50" />

        <!-- ðŸ”´ Price Display -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/priceDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coin_graph"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="#ff0000ff"
            android:gravity="center" />

        <!-- âš™ï¸ Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:menu="@menu/bottom_nav_menu_main"
            android:background="#60afefff"
            android:itemIconTint="#FFFFFF"
            android:itemTextColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
